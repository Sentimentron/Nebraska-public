<Workflow>

	<WorkflowOptions>
		<WorkflowName>Twitter Link Extractor</WorkflowName>
		<WorkflowDescription> Extract all Twitter short-links and dump them into a MySQL database.</WorkflowDescription>
		<RetainOutputFile path="links.sqlite"/>
		<DisableUntrackedFileCheck />
	</WorkflowOptions>
    
    <Tables>
        <TemporaryLabelTable prefix="filterClustering" />
        <TemporaryLabelTable prefix="filterClusters" />
    </Tables>

	<InputSources>
		<TwitterInputSource dir="Data/Corpora" />
	</InputSources>
    
    <WorkflowTasks>
        <BasicFilter filterText="http" />
        <UniqueFilter />
        <UniqueTextFilter />
        <HashTagLabeller dest="filterClustering" />
        <AtMentionLabeller dest="filterClustering" />
        <ClusterLabeller src="filterClustering" dest="filterClusters" epsilon="0.6" minSize="2" />
        <LabelFilter src="filterClusters" delete="true" temporary="true">
            <RetainLabel id="0" />
        </LabelFilter>
        <!--LabelClusterFilter src="filterClustering" /-->
    </WorkflowTasks>

</Workflow>
