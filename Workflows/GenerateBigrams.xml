<Workflow>

    <WorkflowOptions>
        <WorkflowName>AMT Corpus Bigrams with Binary Presence</WorkflowName>
        <WorkflowDescription>Imports AMT corpus and generates Bigrams with binary presence.</WorkflowDescription>
        <RetainOutputFile path="amt.sqlite"/>
        <DisableUntrackedFileCheck />
    </WorkflowOptions>

    <Tables>
        <ResultsTable />
    </Tables>

    <InputSources>
        <AMTInputSource dir="Data/MechanicalTurk/Tech" />
    </InputSources>

    <WorkflowTasks>
        <AMTNormalise/>
        <!-- <BigramBinaryPresenceARFFExporter outputTable="bigrams" path="bigrams.arff" useStopWords="true" stem="true"/> -->
        <BigramBinaryPresencePercentageSubjectiveARFFExporter outputTable="bigrams" path="bigrams.arff" lemmise="true"/>
        <!-- <BigramBinaryPresenceNumberSubjectiveARFFExporter outputTable="bigrams" path="bigrams.arff" useStopWords="true"/> -->
        <!-- <BigramBinaryPresenceTotalNumberSubjectiveARFFExporter outputTable="bigrams" path="bigrams.arff" lemmise="true"/> -->
    </WorkflowTasks>

</Workflow>
