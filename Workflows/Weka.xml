<Workflow>

    <WorkflowOptions>
        <WorkflowName>WEKA benchmark</WorkflowName>
        <WorkflowDescription>Runs a suite of WEKA classifiers</WorkflowDescription>
        <DisableUntrackedFileCheck />
        <RetainOutputFile path="weka.sqlite" />
    </WorkflowOptions>

    <InputSources>
        <PreviousWorkflow path="Workflows/WhiteSpaceTagger.xml" />
    </InputSources>

    <Tables>
        <PartOfSpeechListTable name="whitelist" ref="test" />
    </Tables>

    <WorkflowTasks>
        <WekaAction id="J48" posSrc="test" labelSrc="emoticons" folds="5" classifier="weka.classifiers.trees.J48 -C 0.25" />
        <RewritePOSFilter src="test" tag=":)" />
        <RewritePOSFilter src="test" tag=";)" />
        <RewritePOSFilter src="test" tag=":-)" />
        <RewritePOSFilter src="test" tag=";-)" />
        <RewritePOSFilter src="test" tag=":D" />
        <RewritePOSFilter src="test" tag=":-D" />
        <RewritePOSFilter src="test" tag=":(" />
        <RewritePOSFilter src="test" tag=":-(" />
        <RewritePOSFilter src="test" tag="D:" />
        <WekaAction id="J48" posSrc="test" labelSrc="emoticons" folds="5" classifier="weka.classifiers.trees.J48 -C 0.25" />
        <POSWhiteListUnpopularTags maxPopularity="1" src="test" dest="whitelist" />
        <POSRewriteFromWhiteList ref="whitelist" src="test" />
        <WekaAction id="J48" posSrc="test" labelSrc="emoticons" folds="5" classifier="weka.classifiers.trees.J48 -C 0.25" />
        <RewritePOSFilter src="test" tag="@" />
        <WekaAction id="J48" posSrc="test" labelSrc="emoticons" folds="5" classifier="weka.classifiers.trees.J48 -C 0.25" />
    </WorkflowTasks>

</Workflow>